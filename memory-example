#assign memory to a pod
apiVersion: v1
kind: Pod
metadata:
  name: < any name >
  namespace: <any namespace which we want the pod to be created>
spec:
  containers:
  - name: < any name>
    image: polinux/stress
    resources:
      limits:
        memory: "200Mi"
      requests:
        memory: "100Mi"
    command: ["stress"]
    args: ["--vm", "1", "--vm-bytes", "150M", "--vm-hang", "1"]
    

  
